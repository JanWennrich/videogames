<tr class="game-row"
        {% if game.isInstalled %} data-game-is-installed="1" {% endif %}
        {% if game.isCouchCoopGame %} data-game-is-couch-coop="1" {% endif %}
        {% if game.isFavorite %} data-game-is-favorite="1" {% endif %}
>
    <td class="game-column game-column-name">{{ game.name }}</td>
    <td class="game-column game-column-playtime">
        <time datetime="PT{{ game.playtime.inHours }}H">
            {% if game.playtime.inHours > 0 %}
                {{ game.playtime.inHours }} h
            {% endif %}
        </time>
    </td>
    <td class="game-column game-column-platform">
        <img src="{{ game.platform.iconPath }}"
             alt="{{ game.platform.name }}"
             title="{{ game.platform.name }}"
             class="game-column-platform-icon game-column-platform-icon-{{ game.platform.name|lower|replace({' ':'-','(':'',')':'','.':'-'}) }}"
        />
    </td>
    <td class="game-column game-column-installed">
        {{ game.isInstalled ? "üéÆ" }}
    </td>
    <td class="game-column game-column-favorite">
        {{ game.isFavorite ? "‚≠êÔ∏è" }}
    </td>
    <td class="game-column game-column-couch-coop">
        {{ game.isCouchCoopGame ? "ü§ù" }}
    </td>
    <td class="game-column game-column-genres">
        <ul class="genre-tags">
            {% for genre in game.genres %}
                <li class="genre-tag">{{ genre.name }}</li>
            {% endfor %}
        </ul>
    </td>
    <td class="game-column game-column-score">
        {% if game.communityScore.value %}
        <div class="game-score game-score-community">
            <label title="Community score">{{ game.communityScore.value }}</label>
            <meter min="0" max="100" low="50" high="75" optimum="90" value="{{ game.communityScore.value }}" title="Community score"></meter>
        </div>
        {% endif %}
        {% if game.criticScore.value %}
        <div class="game-score game-score-critic">
            <label title="Critic score">{{ game.criticScore.value }}</label>
            <meter min="0" max="100" low="50" high="75" optimum="90" value="{{ game.criticScore.value }}" title="Critic score"></meter>
        </div>
        {% endif %}
    </td>
</tr>